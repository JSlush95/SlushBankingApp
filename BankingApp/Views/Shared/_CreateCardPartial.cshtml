
@model BankingApp.Models.CreateCardViewModel
<div>
    <br />
    <h3>Create a Card</h3>
    @using (Html.BeginForm("CreateCard", "Manage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.SelectedAccountID, new { @class = "col-md-2 col-form-label" })
            @Html.DropDownListFor(m => m.SelectedAccountID, Model.BankAccounts, "Select Account", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedAccountID, "", new { @class = "text-danger" })
        </div>

        <br />
        <div class="form-group">
            @Html.LabelFor(m => m.CardType, new { @class = "col-md-2 col-form-label" })
            @Html.EnumDropDownListFor(m => m.CardType, "Select Type", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
            @Html.ValidationMessage("CooldownTimerError")
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Create Card</button>
    }
</div>

