@using BankingAppCore.Models
@model CreateAccountViewModel
<div>
    <h3><u>Create Bank Account</u></h3>
    <br />
    @using (Html.BeginForm("CreateAccount", "Manage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.AccountType, "", new { @class = "text-danger" })
            <div class="col-md-3">
                @Html.LabelFor(m => m.AccountType, new { @class = "col-form-label" })
                <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<BankingAppCore.Models.AccountType>()">
                    <option value="">Select Type</option>
                </select>
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.Balance, "", new { @class = "text-danger" })
            <div class="col-md-3">
                @Html.LabelFor(m => m.Balance, new { @class = "col-form-label" })
                @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-light">Create Account</button>
        <br /><br /><br />
        <div class="entry-content">
            <strong>Rules:</strong>
            <ul>
                <li>An account type must be selected.</li>
                <li>The balance should be in a non-negative decimal number format.</li>
            </ul>
        </div>
    }
</div>